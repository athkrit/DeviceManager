<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                style="@style/CardViewDetailDevice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tvDeviceDetail"
                        style="@style/TextViewForDetailDevice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_detail"
                        android:drawableLeft="@drawable/ic_detail"
                        android:drawablePadding="10dp"
                        android:text="@string/details"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvOwnerName"
                        style="@style/TextViewForDetailDevice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:drawableStart="@drawable/ic_person"
                        android:drawableLeft="@drawable/ic_person"
                        android:drawablePadding="10dp"
                        android:text="@string/name"
                        android:textSize="18sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--<TextView
                android:id="@+id/tvItemId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/serial_number"
                android:textSize="12sp" />-->

            <!--<View style="@style/Divider" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    style="@style/CardViewDetailDevice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <TextView
                            style="@style/TextViewForDetailDevice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="@string/type"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvType"
                            style="@style/TextViewForDetailDevice"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="end" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/CardViewDetailDevice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <TextView
                            style="@style/TextViewForDetailDevice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="@string/brand"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvBrand"
                            style="@style/TextViewForDetailDevice"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="end" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                style="@style/CardViewDetailDevice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        style="@style/TextViewForDetailDevice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="@string/model"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvModel"
                        style="@style/TextViewForDetailDevice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/CardViewDetailDevice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        style="@style/TextViewForDetailDevice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="@string/serial_number"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvSerialNumber"
                        style="@style/TextViewForDetailDevice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--<View style="@style/Divider" />-->

            <androidx.cardview.widget.CardView
                style="@style/CardViewDetailDevice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        style="@style/TextViewForDetailDevice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/last_updated"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvLastUpdate"
                        style="@style/TextViewForDetailDevice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/CardViewDetailDevice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        style="@style/TextViewForDetailDevice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/added_date"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvAddedDate"
                        style="@style/TextViewForDetailDevice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnEdit"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="@string/edit" />

                <Button
                    android:id="@+id/btnCheck"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="@string/check" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent_background"
            android:clickable="true"
            android:focusable="true"
            android:visibility="invisible" />

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spin_kit"
            style="@style/SpinKitView.Large.ThreeBounce"
            android:layout_width="200dp"
            android:layout_height="195dp"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            app:SpinKit_Color="@color/colorAccent" />

    </RelativeLayout>

</ScrollView>